{
  "name": "angular-widget",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/angular-widget/src",
  "projectType": "application",
  "prefix": "app",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "options": {
        "outputPath": "dist/apps/angular-widget",
        "index": "apps/angular-widget/src/index.html",
        "main": "apps/angular-widget/src/main.ts",
        "polyfills": "apps/angular-widget/src/polyfills.ts",
        "tsConfig": "apps/angular-widget/tsconfig.app.json",
        "assets": [
          "apps/angular-widget/src/favicon.ico",
          "apps/angular-widget/src/assets"
        ],
        "styles": [
          "apps/angular-widget/src/styles.scss",
          "apps/angular-widget/src/egais-theme.scss"
        ],
        "allowedCommonJsDependencies": ["lodash"],
        "vendorChunk": true,
        "extractLicenses": false,
        "buildOptimizer": false,
        "sourceMap": true,
        "optimization": false,
        "namedChunks": true,
        "commonChunk": false,
        "customWebpackConfig": {
          "path": "apps/angular-widget/webpack.config.js"
        }
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/angular-widget/src/environments/environment.ts",
              "with": "apps/angular-widget/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "buildOptimizer": true,
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "6kb"
            }
          ],
          "customWebpackConfig": {
            "path": "apps/angular-widget/webpack.prod.config.js"
          }
        }
      },
      "defaultConfiguration": ""
    },
    "deploy": {
      "executor": "angular-cli-ghpages:deploy",
      "options": {
        "baseHref": "https://violetgekkon.github.io/angular-widget/",
        "name": "sia angular-widget"
      }
    },
    "serve": {
      "executor": "@nx/angular:module-federation-dev-server",
      "options": {
        "browserTarget": "angular-widget:build",
        "publicHost": "http://localhost:4200"
      },
      "configurations": {
        "production": {
          "browserTarget": "angular-widget:build:production"
        }
      }
    },
    "extract-i18n": {
      "executor": "ngx-build-plus:extract-i18n",
      "options": {
        "browserTarget": "angular-widget:build"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "main": "apps/angular-widget/src/test.ts",
        "polyfills": "apps/angular-widget/src/polyfills.ts",
        "tsConfig": "apps/angular-widget/tsconfig.spec.json",
        "karmaConfig": "apps/angular-widget/karma.conf.js",
        "styles": ["apps/angular-widget/src/styles.scss"],
        "scripts": [],
        "assets": [
          "apps/angular-widget/src/favicon.ico",
          "apps/angular-widget/src/assets"
        ]
      }
    }
  }
}
